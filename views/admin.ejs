<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container">
            <a class="navbar-brand" href="/">Fred's Page</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<!-- End of Navbar -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-4 pt-5 pb-5"> 
                <div class="card mx-auto shadow" style="width: 25rem;">
                    <div class="card-body">
                      <h5 class="card-title">REGISTER STUDENTS</h5>
                      <hr> 
                         <!-- Registration Form -->
                      <form action="/register" method="POST"> 
                       <!-- Fullname -->
                        <div class="form-group">
                          <label for="inputAddress">Full Name</label>
                          <input type="text" name="fullname" class="form-control" id="inputAddress" placeholder="John Doe" required>
                        </div>

                        <!-- level -->
                        <div class="form-group">
                          <label for="inputAddress2">Level</label>
                          <select id="inputState" name="level" class="form-control">
                            <option selected>Choose...</option>
                            <option>100</option>
                            <option>200</option>
                            <option>300</option>
                            <option>400</option>
                          </select>
                        </div>

                        <!-- Program -->
                        <div class="form-group">
                          <label for="inputAddress2">Program</label>
                          <select id="inputState" name="program" class="form-control">
                            <option selected>Choose...</option>
                            <option>BSC ICT</option>
                            <option>BSC CS</option>
                            <option>BSC MIS</option>
                          </select>
                        </div>

                        <!-- Email and Password -->
                        <div class="form-row">
                            <div class="form-group col-md-6">
                              <label for="inputEmail4">Email</label>
                              <input type="email" name="email" class="form-control" id="inputEmail4">
                            </div>
                            <div class="form-group col-md-6">
                              <label for="inputPassword4">Password</label>
                              <input type="password" name="password" class="form-control" id="inputPassword4">
                            </div>
                          </div>

                        
                        <button type="submit" class="btn btn-info btn-block">Register</button>
                      </form>
                    </div>
                  </div>
            </div>

            <div class="col-sm-12 col-md-8 bg-success">
              2 of 2
            </div>
          </div>

    </div>
</body>
</html>